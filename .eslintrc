{
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "ecmaFeatures": {
        "modules": true
    },
    "extends": [
      "airbnb/base",
      "plugin:react/recommended"
    ],
    "rules": {
        "no-bitwise": 2,
        "no-else-return": 2,
        "no-eq-null": 2,
        "no-extra-parens": 0,
        "no-floating-decimal": 2,
        "no-inner-declarations": [2, "both"],
        "no-lonely-if": 2,
        "no-multiple-empty-lines": [2, {"max": 3}],
        "no-param-reassign": 1,
        "no-self-compare": 2,
        "no-underscore-dangle": [
        "error",
            {
              "allow": [
                "__",
                "_id",
                "_ensureIndex",
                "_verifyEmailToken",
                "_resetPasswordToken",
                "_name"
              ]
            }
        ],
        "no-use-before-define": 0,
        "no-unused-expressions": 0,
        "no-void": 2,
        "brace-style": [2, "1tbs"],
        "camelcase": [1, {"properties": "never"}],
        "consistent-return": 0,
        "comma-style": [2, "last"],
        "complexity": [1, 12],
        "func-names": 0,
        "guard-for-in": 2,
        "import/no-absolute-path": 1,
        "import/no-unresolved": 0,
        "import/no-extraneous-dependencies": 0,
        "import/extensions": 0,
        "class-methods-use-this": 0,
        "indent": [2, 2],
        "max-len": [0, 120, 4],
        "new-cap": [2, {"newIsCap": true, "capIsNew": false}],
        "quotes": [2, "single"],
        "keyword-spacing": [2, {"before": true, "after": true}],
        "space-before-blocks": [2, "always"],
        "array-bracket-spacing": [2, "never"],
        "space-in-parens": [2, "never"],
        "strict": [0],
        "valid-jsdoc": 2,
        "wrap-iife": [2, "any"],
        "yoda": [1, "never"]
    },
    "plugins": [
        "react"
    ],
    "globals": {

    }
}